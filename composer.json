{
    "name": "threeheartsdigital/html-to-plaintext-conversion-service",
    "description": "Converts HTML to formatted plain text",
    "type": "library",
    "license": "GPL-2.0-or-later",
    "autoload": {
        "psr-4": {
            "ThreeHeartsDigital\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ThreeHeartsDigital\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.2",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.16",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.3"
    },
    "config": {
        "platform": {
            "php": "8.2"
        }
    }
}